@{
    ViewBag.Title = "Welcome to Our Pharmacy";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/styles.css" />
    <style>
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            display: flex;
            flex-direction: column;
            background: url('~/images/pharmacy-background.jpg') no-repeat center center fixed;
            background-size: cover;
        }

        .content {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
            padding: 20px;
        }

        .container {
            background-color: rgba(255, 255, 255, 0.9);
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            max-width: 500px;
            width: 100%;
        }

        h1 {
            font-size: 2.5em;
            color: #333;
            margin-bottom: 30px;
        }

        .btn-container {
            display: flex;
            justify-content: center;
            gap: 15px;
            margin-top: 20px;
        }

        .btn {
            background-color: #007bff;
            color: #fff;
            padding: 12px 25px;
            border: none;
            border-radius: 5px;
            font-size: 1.2em;
            text-decoration: none;
            transition: background-color 0.3s ease, transform 0.2s ease;
            text-align: center;
        }

            .btn:hover {
                background-color: #0056b3;
                transform: scale(1.05);
            }
    </style>
</head>
<body>
    <div class="content">
        <div class="container">
            <h1>Welcome to Our Pharmacy!</h1>
            <div class="btn-container">
                <a href="@Url.Action("Index", "Medicine")" class="btn">View Medicines</a>
                <a href="@Url.Action("Index", "Branch")" class="btn">View Branches</a>
            </div>
        </div>
    </div>
</body>
</html>
