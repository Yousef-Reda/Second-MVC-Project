@model List<Final.Models.Medicine>

<form action="@Url.Action("Search", "Medicines")" method="get">
    <input type="text" name="query" placeholder="Enter medicine name" />
    <button type="submit">Search</button>
</form>

@if (ViewBag.Message != null)
{
    <p>@ViewBag.Message</p>
}

@if (Model != null && Model.Count > 0)
{
    <table>
        <thead>
            <tr>
                <th>Medicine Name</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var medicine in Model)
            {
                <tr>
                    <td>@medicine.Mname</td>
                    <td>
                        <a href="@Url.Action("Details", new { id = medicine.Id })">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
