@model IEnumerable<Final.Models.Branch>

@{
    ViewBag.Title = "This Medicine is Available At";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/styles.css" />
    <style>
        .container {
            margin: 20px;
        }

        h2 {
            color: #007bff;
        }

        .branch-card {
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 20px;
            background-color: #f9f9f9;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

            .branch-card h3 {
                margin-top: 0;
                color: #333;
            }

            .branch-card p {
                margin: 5px 0;
                color: #555;
            }
    </style>
</head>
<body>
    <div class="container">
        <h2>Available At</h2>
        @if (Model.Any())
        {
            foreach (var branch in Model)
            {
                <div class="branch-card">
                   
                    <p><strong>Branch Id:</strong> @branch.Bid</p>
                    <p><strong>Address:</strong> @branch.Baddress</p>
                    <p><strong>Phone:</strong> @branch.Phone</p>
                </div>
            }
        }
        else
        {
            <p>No branches found for this medicine.</p>
        }
    </div>
</body>
</html>
